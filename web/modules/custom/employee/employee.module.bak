/**
 * Implements hook_view_pre_render()
 */
function employee_views_pre_render(ViewExecutable $view){
    //dump($view);exit;
	if($view->id() == 'articles' && $view->getDisplay()->display['id'] == "page_1" ){
		$view->element['#attached']['library'][] = 'employee/employee-library';
        $view->setTitle('From custom employee Module');
	}
    
}
/**
 * Implements hook_theme()
 */
function employee_theme($existing, $type, $theme, $path) {
  $return = [];  
  $return['employee_page'] = [//from controller
    'template' => 'employee-page',//optional
    'variables'=>[
	    'data'=>[],//variable name from controller
		'title'=>'',
		'emp_datas'=>[] //variable name from controller
	]
  ];
     
return $return;	
}