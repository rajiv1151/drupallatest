/**
 * Implements hook_help().
 *
 *  {@inheitdoc}
 */
function rk_customlogin_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.rk_customlogin':
      $output = '';
      $output .= '<h3>' . t('Settings') . '</h3>';
      return $output;
  }
}

